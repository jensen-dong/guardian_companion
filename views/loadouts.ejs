<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loadouts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Home</a>
        <a class="navbar-brand" href="/loadouts">Loadouts</a>
        <a class="navbar-brand" href="/favorites">Favorites</a>
        <a class="navbar-brand ml-auto" href="/logout">Logout</a>
    </nav>
    <div class="container mt-4">
        <h1 class="text-white">Loadouts</h1>
        <div class="row">
            <% loadouts.forEach(loadout => { %>
                <div class="col-md-4 mb-4">
                    <div class="card bg-dark text-white">
                        <div class="card-body">
                            <h5 class="card-title"><%= loadout.name %></h5>
                            <p class="card-text">
                                <strong>Kinetic:</strong> <%= loadout.gear.kinetic.name %><br>
                                <strong>Energy:</strong> <%= loadout.gear.energy.name %><br>
                                <strong>Heavy:</strong> <%= loadout.gear.heavy.name %><br>
                            </p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/script.js"></script>
</body>
</html>